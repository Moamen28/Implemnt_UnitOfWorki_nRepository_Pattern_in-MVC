@using lab_Model
@model IQueryable<Student>
@{

    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.title = "Login";

}

<div class="bg-gradient">
    @Html.ActionLink("Craete Student", "Create", "student", new { @class = "btn btn-info" })
    <table class="table table-dark table-striped table-bordered border-secondary">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">Grade</th>
                <th scope="col">Delete Student</th>
                <th scope="col">Update Student</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Grade</td>
                    <td>
                        @Ajax.ActionLink("Delete", "Delete", new { ID = item.ID }, new AjaxOptions
               {
                   InsertionMode = InsertionMode.Replace,

                   UpdateTargetId = "id1"
               })
                    </td>
                    <td>   @Html.ActionLink("UpdateStudent", "Update", new { ID = item.ID }, new { onclick = "return confirm ('are you sure you want to Update =>   " + item.Name + "')" }) </td>
                </tr>
            }
        </tbody>
    </table>
</div>